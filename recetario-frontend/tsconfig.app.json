// tsconfig.app.json (Frontend)
{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*",
    "src/env.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "files": [
    "./env.d.ts" 
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".", // Indica que las rutas base son relativas a la raíz del proyecto (donde está este archivo)
    "paths": {
      // ⭐️ Esta línea es CRUCIAL: Mapea el alias '@' a la carpeta 'src'
      "@/*": ["./src/*"] 
    },
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler"
  }
}
